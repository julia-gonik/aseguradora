@page "/formulario_vehiculos"
@inject NavigationManager Navegador;
@inject AgregarTitularUseCase AgregarTitularUseCase;

<PageTitle>Titulares</PageTitle>

 <h1>Crear Titular</h1>
 <form>
    <div class="form-group">
      <label for="dni">DNI</label>
      <input type="number" id="dni" @bind="titular.DNI"  name="dni" required>
    </div>
    <div class="form-group">
      <label for="nombre">Nombre</label>
      <input type="text" id="nombre" name="nombre" @bind="titular.Nombre" required>
    </div>
    <div class="form-group">
      <label for="direccion">Dirección</label>
      <input type="text" id="direccion" name="direccion" @bind="titular.Direccion" required>
    </div>
    <div class="form-group">
      <label for="telefono">Teléfono</label>
      <input type="number" id="telefono" name="telefono" @bind="titular.Telefono" required>
    </div>
    <div class="form-group">
      <label for="email">Correo Electrónico</label>
      <input type="email" id="email" name="email" @bind="titular.CorreoElectronico" required>
    </div>
   
    <button class="btn btn-primary btn-block mb-4" @onclick="Guardar">Guardar titular</button>
  </form>


@code {
  Titular titular = new Titular();
  void Guardar()
  {
    Console.WriteLine("Aaaaaaaaaaaa");
    AgregarTitularUseCase.Ejecutar(titular);
    titular = new Titular();
    Navegador.NavigateTo("titulares");
  }
}